package com.ljs.prob;

public class ZigzagConversion {
	public String convert(String s, int numRows) {
		String[] temp = new String[numRows];
		int row = 0;
		int step = 1;
		for(int i=0; i<s.length(); i++) {
			if(temp[row] == null) {
				temp[row] = "";
			}
			temp[row]+=s.charAt(i)+"";
			row+=step;
			if(row>numRows) {
				row = numRows-2;
				step = -1;
			} else if(row<0) {
				row = 1;
				step = 1;
			}
		}
		return String.join("", temp);
	}
}
