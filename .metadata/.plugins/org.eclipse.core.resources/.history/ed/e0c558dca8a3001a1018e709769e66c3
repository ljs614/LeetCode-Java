package com.ljs.prob;

public class MyAtoI {
    public int myAtoi(String str) {
    	int x = -1;
    	boolean isNegative = false;
    	boolean isSign = false;
    	boolean isInt = true;
    	int MAX = Integer.MAX_VALUE-7;
    	int dNum = 1000000000;
    	String temp = "";
    	
    	for(int i=0; i<str.length(); i++) {
    		char c = str.charAt(i);
    		if(c==' ') {
    			if(temp.length()>0) {
    				break;
    			}
    			continue;
    		}else if(c=='+') {
    			if(isSign) {
    				break;
    			}
    			isSign = true;
    			continue;
    		}else if(c=='-') {
    			if(isSign) {
    				break;
    			}
    			isSign = true;
    			isNegative = true;
    			continue;
    		}else if(c>='0' && c<='9') {
    			if(!(temp.length() == 1 && temp.charAt(0) == '0' && c == '0')) {    				
    				temp+=c+"";
    			}
    		}else {
    			break;
    		}
    		
    	}
    	int LEN = temp.length();
    	if(LEN>10) {
    		if(isNegative) {
    			return Integer.MIN_VALUE;
    		}
    		return Integer.MAX_VALUE;
    	}else {
    		for(int i=0; i<LEN; i++) {
    			char c = temp.charAt(i);
    			if(x<0) {
    				x=c-48;
    			}else {
    				if(MAX/dNum<x*10 && LEN==10) {
    					isInt = false;
    					break;
    				}else if(MAX/dNum == x*10) {
    					if((isNegative && c>'8') || (!isNegative && c>'7')) {
    						isInt = false;
    						break;
    					}
    				}
    				x=x*10+(c-48);
    				dNum/=10;
    			}	
    		}
    	}
    	if(x<0) {
    		return 0;
    	}
    	if(isInt) {
    		if(isNegative) {
    			return x*-1;
    		}
    		return x;
    	} else {
    		if(isNegative) {
    			return Integer.MIN_VALUE;
    		}
    		return Integer.MAX_VALUE;
    	}
    }
}
